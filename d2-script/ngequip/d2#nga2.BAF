IF
	!Global("d2ngbolt","GLOBAL",1)
	GlobalTimerNotExpired("d2Player1equip","GLOBAL")
THEN
	RESPONSE #100
		ActionOverride(Player1,CreateItem("00BOLT01",40,0,0))    // bolts
		SetGlobal("d2ngbolt","GLOBAL",1)
		Continue()
END

